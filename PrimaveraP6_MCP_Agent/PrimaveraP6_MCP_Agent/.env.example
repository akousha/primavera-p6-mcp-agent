# PrimaveraP6 MCP Agent - Environment Configuration
# Copy this file to .env and adjust values before starting the server.

# --- Oracle Primavera P6 REST API ---
P6_BASE_URL=https://ca1.p6.oraclecloud.com/metrolinx/p6ws/restapi
P6_ACCEPT=application/json
P6_VERSION=
P6_VERIFY_SSL=false
REQUEST_TIMEOUT=30

# --- MCP Session Management ---
AUTO_SESSION_ENABLED=true
AUTO_SESSION_STRICT_MODE=true
SESSION_STORE_FILE=session_store.json

# --- Server Runtime (used by Docker/uvicorn wrappers) ---
MCP_HOST=0.0.0.0
MCP_PORT=8080
# ALLOWED_HOST=your.p6.server.com

# --- Logging ---
LOG_LEVEL=INFO
ENABLE_SESSION_LOGGING=true

# --- Security ---
MCP_API_KEY=
MCP_API_KEY_HEADER=x-api-key

# --- ChatGPT / Tool Schema ---
ENABLE_TOOL_SCHEMA=true
TOOL_SERVER_BASE_URL=http://127.0.0.1:8080

# --- CORS (comma separated origins; leave blank to disable) ---
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
